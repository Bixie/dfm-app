<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>DFM Javascript App</name>
    <author>Matthijs Alles/Wouter Rikkerink</author>
    <version>1.0.0</version>
    <description>Display DFM form in Joomla! site</description>
    <files>
        <filename>mod_dfm_app.xml</filename>
        <filename module="mod_dfm_app">mod_dfm_app.php</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <media destination="mod_dfm_app">
        <folder>assets/css</folder>
        <folder>assets/images</folder>
        <folder>assets/js</folder>
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <fields name="dfm">
                    <field
                            name="showTitle"
                            type="radio"
                            label="Toon titel"
                            description="Toon titel boven de module"
                            default="0"
                            filter="integer"
                            class="btn-group btn-group-yesno"
                    >
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                    </field>
                    <field
                            name="showIntro"
                            type="radio"
                            label="Toon intro"
                            description="Toon intro boven de module"
                            default="0"
                            filter="integer"
                            class="btn-group btn-group-yesno"
                    >
                        <option value="1">JYES</option>
                        <option value="0">JNO</option>
                    </field>
                    <field
                            name="trial_link"
                            type="text"
                            label="Link voor trial"
                            description=""
                            default=""
                    />
                    <field
                            name="license_link"
                            type="text"
                            label="Link voor jaarlicentie"
                            description=""
                            default=""
                    />
                    <field
                            name="csi_link"
                            type="text"
                            label="Link voor CSI abonnement"
                            description=""
                            default=""
                    />
                </fields>
            </fieldset>
            <fieldset name="dfm_api" label="DFM API">
                <fields name="dfm_api">
                    <field name="api_path"
                           label="API path"
                           default="dfm-api"
                           type="text" />
                    <field name="api_url"
                           label="API URL"
                           default=""
                           type="text" />
                    <field name="api_key"
                           label="API Key"
                           default=""
                           type="text" />
                    <field name="previewimages_folder"
                           label="Previewimages folder"
                           default="../image-web"
                           type="text" />
                </fields>
            </fieldset>
        </fields>
    </config>
</extension>
